{
    "name": "swew/framework",
    "type": "library",
    "description": "A framework that is designed to fix the fatal flaw of other frameworks.",
    "license": "MIT",
    "authors": [
        {
            "name": "AVIL13",
            "email": "avil@swew.app"
        }
    ],
    "config": {
        "platform": {
            "php": "8.1"
        },
        "sort-packages": true,
        "optimize-autoloader": true
    },
    "autoload": {
        "psr-4": {
            "Swew\\Framework\\": "src/"
        },
        "files": [
            "src/Functions.php"
        ],
        "exclude-from-classmap": [
            "spec",
            "/Tests/",
            "/test/",
            "/tests/"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Swew\\Testing\\": "tests/"
        }
    },
    "require": {
        "php": ">=8.1",
        "nikic/fast-route": "^v1.3.0",
        "psr/container": "^2.0",
        "psr/http-message": "^1.0.1",
        "psr/http-server-middleware": "^1.0.1",
        "rakit/validation": "^v1.4.0"
    },
    "require-dev": {
        "laravel/pint": "v1.10.0",
        "phpstan/phpstan": "^1.10.15",
        "psalm/phar": "^5.12.0",
        "swew/dd": "^1.3",
        "swew/test": "^v1.3.2"
    },
    "scripts": {
        "test": "t",
        "static": "./vendor/psalm/phar/psalm.phar --no-cache",
        "stan": "vendor/bin/phpstan analyse src --level=3",
        "code-check": "./vendor/bin/pint",
        "check": [
            "@static",
            "@stan",
            "@code-check"
        ]
    }
}
