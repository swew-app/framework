{
    "name": "swew/framework",
    "type": "library",
    "description": "A framework that is designed to fix the fatal flaw of other frameworks.",
    "license": "MIT",
    "authors": [
        {
            "name": "AVIL13",
            "email": "avil@swew.app"
        }
    ],
    "config": {
        "sort-packages": true,
        "optimize-autoloader": true,
        "allow-plugins": {
            "carthage-software/mago": true
        }
    },
    "autoload": {
        "psr-4": {
            "Swew\\Framework\\": "src/"
        },
        "files": [
            "src/Functions.php"
        ],
        "exclude-from-classmap": [
            "src/**/__tests__/",
            "src/**/__test__/",
            "src/AppTest",
            "tests/"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Swew\\AppTest\\": "src/AppTest",
            "Swew\\Testing\\Integration\\": "tests/Integration"
        }
    },
    "repositories": [
        {
            "type": "path",
            "url": "../test",
            "options": {
                "symlink": true
            }
        },
        {
            "type": "path",
            "url": "../dd",
            "options": {
                "symlink": true
            }
        },
        {
            "type": "path",
            "url": "../router",
            "options": {
                "symlink": true
            }
        }
    ],
    "prefer-stable": true,
    "minimum-stability": "dev",
    "require": {
        "ext-json": "*",
        "php": ">=8.4",
        "psr/container": "^2.0.2",
        "psr/http-message": "^2.0",
        "psr/http-server-middleware": "^1.0.2",
        "swew/router": "*"
    },
    "require-dev": {
        "carthage-software/mago": "^0.26.1",
        "phpstan/phpstan": "^2.1.22",
        "psalm/phar": ">=5.26.1",
        "rector/rector": "^2.1.4",
        "swew/dd": "*",
        "swew/test": "*"
    },
    "scripts": {
        "__post-package-install": [
            "composer mago:install-binary"
        ],
        "mago:fmt": "mago fmt && mago lint --fix --potentially-unsafe --fmt",
        "mago:lint": "mago lint --minimum-level=note",
        "rector": "vendor/bin/rector process --no-ansi",
        "phpstan": "vendor/bin/phpstan analyse src tests --memory-limit=1G --level=3",
        "static": "./vendor/psalm/phar/psalm.phar --no-cache --show-info=true",
        "test": "t",
        "qa": [
            "composer mago:fmt",
            "composer rector",
            "composer mago:lint",
            "composer phpstan",
            "composer static",
            "composer test -- -short"
        ]
    }
}
